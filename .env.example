# Podcast Transcript Downloader - Environment Variables
# Copy this file to .env and modify as needed

# ===== Whisper API Settings =====
WHISPER_API=http://localhost:8207
WHISPER_PORT=8207
WHISPER_MODEL=large-v3
MAX_FILE_SIZE=524288000  # 500MB

# ===== Ollama API Settings =====
OLLAMA_API=http://localhost:11434
OLLAMA_MODEL=qwen3:8b
LLM_ENABLED=true

# ===== Batch Processing Settings =====
BATCH_SIZE_PASS1=8   # Pass 1: punctuation, error correction
BATCH_SIZE_PASS2=20  # Pass 2: polish into article

# ===== API Settings =====
API_TIMEOUT=120
API_MAX_RETRIES=3
API_RETRY_DELAY=2.0

# ===== Ollama Generation Settings =====
OLLAMA_TEMPERATURE=0.3
OLLAMA_NUM_PREDICT=4096

# ===== Backend Settings =====
HOST=0.0.0.0
PORT=8000
OUTPUT_BASE_DIR=./output
TEMP_AUDIO_DIR=./temp
